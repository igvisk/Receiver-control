import tkinter as tk

def show_dashboard():
    clear_right_frame()
    dashboard_label = tk.Label(right_frame, text="Dashboard", bg="green", fg="white", font=("Arial", 16))
    dashboard_label.pack(expand=True, fill="both")

def show_settings():
    clear_right_frame()
    settings_label = tk.Label(right_frame, text="Settings", bg="blue", fg="white", font=("Arial", 16))
    settings_label.pack(expand=True, fill="both")

def clear_right_frame():
    for widget in right_frame.winfo_children():
        widget.destroy()

# Hlavné okno
window = tk.Tk()
window.title("Receiver control")
window.geometry("800x400")  # väčšie okno pre lepší pomer

# Nastavenie grid layoutu
window.grid_rowconfigure(0, weight=1)
# window.grid_columnconfigure(0, minsize=150)  # ⬅️ TOTO nastaví šírku ľavého rámu
window.grid_columnconfigure(1, weight=1)  # pravý stĺpec expanduje
# Status ram
status_frame = tk.Frame(window, bg='pink', height=150)
status_frame.grid(row=0, column=1, sticky="ew")
status_frame.grid_propagate(False)

# Ľavý rám (navigácia)
left_frame = tk.Frame(window, bg="black", width=300)
left_frame.grid(row=1, column=0, sticky="ns")
left_frame.grid_propagate(False)  # zachová šírku

# Pravý rám (obsah)
right_frame = tk.Frame(window, bg="white")
right_frame.grid(row=1, column=1, sticky="nsew")  # expanduje do zvyšku okna

# Tlačidlá v ľavom ráme
btn_dashboard = tk.Button(left_frame, text="Dashboard", command=show_dashboard)
btn_dashboard.pack(padx=25, pady=10, fill="x")                                          #cez padx nastavenie sirky laveho framu

btn_settings = tk.Button(left_frame, text="Settings", command=show_settings)
btn_settings.pack(pady=10, fill="x")

# Štart s Dashboardom
show_dashboard()

window.mainloop()
